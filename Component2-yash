    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            gsap.from('.wave', {
                duration: 1.5,
                y: 50,
                ease: 'power2.out'
            });
            
            gsap.from('.footer-section h3', {
                duration: 1,
                y: -30,
                opacity: 0,
                stagger: 0.2,
                ease: 'back.out'
            });
            
            gsap.to('.footer-section ul li', {
                duration: 0.8,
                x: 0,
                opacity: 1,
                stagger: 0.1,
                ease: 'power2.out',
                delay: 0.5
            });
            
            gsap.to('.social-icons a', {
                duration: 0.6,
                y: 0,
                opacity: 1,
                stagger: 0.1,
                ease: 'back.out',
                delay: 1
            });
            
            document.querySelectorAll('.footer-section ul li a').forEach(link => {
                link.addEventListener('mouseenter', () => {
                    gsap.to(link, {
                        duration: 0.3,
                        color: '#fffb00',
                        x: 5,
                        ease: 'power2.out'
                    });
                });
                
                link.addEventListener('mouseleave', () => {
                    gsap.to(link, {
                        duration: 0.3,
                        color: 'white',
                        x: 0,
                        ease: 'power2.out'
                    });
                });
            });
            
            document.querySelectorAll('.social-icons a').forEach(icon => {
                icon.addEventListener('mouseenter', () => {
                    gsap.to(icon, {
                        duration: 0.3,
                        backgroundColor: 'white',
                        color: '#a777e3',
                        y: -5,
                        ease: 'power2.out'
                    });
                });
                
                icon.addEventListener('mouseleave', () => {
                    gsap.to(icon, {
                        duration: 0.3,
                        backgroundColor: 'rgba(255, 255, 255, 0.2)',
                        color: 'white',
                        y: 0,
                        ease: 'power2.out'
                    });
                });
            });
        });
    </script>
