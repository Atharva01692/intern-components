    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/MorphSVGPlugin.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const morphShapes = document.getElementById('morphShapes');
            const shapeCount = 8;
            const colors = [
                'rgba(0, 219, 222, 0.1)',
                'rgba(252, 0, 255, 0.1)',
                'rgba(255, 255, 255, 0.1)',
                'rgba(0, 150, 255, 0.1)'
            ];
            
            for (let i = 0; i < shapeCount; i++) {
                const shape = document.createElement('div');
                shape.classList.add('morph-shape');
                
                const size = Math.random() * 200 + 100;
                shape.style.width = `${size}px`;
                shape.style.height = `${size}px`;
                
                shape.style.left = `${Math.random() * 100}%`;
                shape.style.top = `${Math.random() * 100}%`;
                
                shape.style.background = colors[Math.floor(Math.random() * colors.length)];
                
                morphShapes.appendChild(shape);
                
                const morphDuration = Math.random() * 15 + 10;
                const morphDelay = Math.random() * 5;
                
                gsap.to(shape, {
                    duration: morphDuration,
                    borderRadius: getRandomBorderRadius(),
                    delay: morphDelay,
                    repeat: -1,
                    yoyo: true,
                    ease: 'sine.inOut',
                    onComplete: function() {
                        gsap.to(shape, {
                            duration: morphDuration,
                            borderRadius: getRandomBorderRadius(),
                            repeat: -1,
                            yoyo: true,
                            ease: 'sine.inOut'
                        });
                    }
                });
                
                gsap.to(shape, {
                    duration: Math.random() * 20 + 10,
                    x: (Math.random() - 0.5) * 200,
                    y: (Math.random() - 0.5) * 200,
                    repeat: -1,
                    yoyo: true,
                    ease: 'sine.inOut'
                });
            }
            
            function getRandomBorderRadius() {
                const values = [];
                for (let i = 0; i < 8; i++) {
                    values.push(Math.random() * 50 + 10);
                }
                return `${values[0]}% ${values[1]}% ${values[2]}% ${values[3]}% / ${values[4]}% ${values[5]}% ${values[6]}% ${values[7]}%`;
            }
            
            gsap.to('.footer-heading', {
                duration: 1,
                y: 0,
                opacity: 1,
                ease: 'power3.out',
                delay: 0.3
            });
            
            gsap.to('.footer-card', {
                duration: 0.8,
                scale: 1,
                opacity: 1,
                stagger: 0.15,
                ease: 'back.out(1.7)',
                delay: 0.6
            });
            
            gsap.to('.social-links a', {
                duration: 0.6,
                y: 0,
                opacity: 1,
                stagger: 0.1,
                ease: 'back.out(1.7)',
                delay: 1.2
            });
            
            document.querySelectorAll('.footer-card').forEach(card => {
                card.addEventListener('mouseenter', () => {
                    gsap.to(card, {
                        duration: 0.3,
                        boxShadow: '0 20px 40px rgba(0, 0, 0, 0.4)',
                        ease: 'power2.out'
                    });
                    
                    gsap.to(card.querySelector('.card-icon'), {
                        duration: 0.5,
                        rotation: 360,
                        ease: 'back.out(1.7)'
                    });
                });
                
                card.addEventListener('mouseleave', () => {
                    gsap.to(card, {
                        duration: 0.3,
                        boxShadow: '0 10px 20px rgba(0, 0, 0, 0.2)',
                        ease: 'power2.out'
                    });
                });
            });
            
            document.querySelectorAll('.footer-links a').forEach(link => {
                link.addEventListener('mouseenter', () => {
                    gsap.to(link, {
                        duration: 0.3,
                        color: 'white',
                        ease: 'power2.out'
                    });
                });
                
                link.addEventListener('mouseleave', () => {
                    gsap.to(link, {
                        duration: 0.3,
                        color: 'rgba(255, 255, 255, 0.7)',
                        ease: 'power2.out'
                    });
                });
            });
            
            const footer = document.querySelector('.footer-morph');
            const colors1 = ['#0f0c29', '#302b63'];
            const colors2 = ['#24243e', '#302b63'];
            let currentColors = colors1;
            
            gsap.to(footer, {
                duration: 15,
                background: `linear-gradient(135deg, ${colors2[0]}, ${colors2[1]})`,
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut'
            });
        });
    </script>
</body>
